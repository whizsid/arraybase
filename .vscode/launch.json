	"version": "0.2.0",
	"configurations": [

		{
			"name": "Listen for XDebug",
			"type": "php",
			"request": "launch",
			"port": 9000
		},
		{
			"name": "Launch currently open script",
			"type": "php",
			"request": "launch",
			"program": "${file}",
			"cwd": "${fileDirname}",
			"port": 9000,
			"runtimeExecutable": "/usr/bin/php"
		},
		{
			"name": "Launch example",
			"type": "php",
			"request": "launch",
			"program": "${workspaceFolder}/example/index.php",
			"cwd": "${workspaceFolder}/example",
			"port": 9000,
			"runtimeExecutable": "/usr/bin/php"
		}
	]
}